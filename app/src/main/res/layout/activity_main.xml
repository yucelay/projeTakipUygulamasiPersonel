<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/personel_login_background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proje Takip Uygulaması\nPersonel Girişi"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/usericonpersonel"
        />

    <EditText
        android:id="@+id/projeIdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Proje ID"
        android:textColor="#800000"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/proje_id_icon"
        android:background="@drawable/login_text_border"/>

    <EditText
        android:id="@+id/sifreEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Şifre"
        android:textColor="#800000"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/login_password_icon"

        android:background="@drawable/login_text_border"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Beni Hatırla"
        android:textColorHint="#000"/>

    <Button
        android:id="@+id/girisYapButon"
        android:layout_width="200dp"
        android:layout_height="50dp"
android:layout_marginTop="10dp"
        android:text="Giriş Yap"
        android:background="@drawable/login_buton_border"/>
</LinearLayout>