<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/yapilacakImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/yapilacakBaslikTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yapilacak"
            android:textSize="20dp"
            android:textColor="#e74e0303"
            android:layout_marginLeft="12dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:text="Tamamlandi"
            android:id="@+id/tamamlanmaBilgisiButon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="8sp"
            android:width="10dp"
            android:layout_marginRight="8dp" />

        <Button
            android:text="Ä°ptal Et"
            android:id="@+id/tamamlanmaIptalButon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="8sp"
            android:width="10dp"
            android:layout_marginRight="8dp" />


    </LinearLayout>

</LinearLayout>